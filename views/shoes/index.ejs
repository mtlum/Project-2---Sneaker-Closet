    <table id="chart">
      <thead>
        <tr>
          <th onclick="sortTable(0)">Make | </th>
          <th onclick="sortTable(1)">Model | </th>
          <th onclick="sortTable(2)">Colourway | </th>
          <!-- <th onclick="sortTable(3)">Release year | </th>
          <th onclick="sortTable(4)">Price Paid | </th> -->
          <th> More Info </th>
        </tr>
      </thead>
    <tbody>
    <% shoes.forEach(function(s){ %>
      <tr>
        <td><%= s.make %></td>
        <td><%= s.model %></td>
        <td><%= s.colour %></td>
        <!-- <td><%= s.year %></td>
        <td>$<%= s.price %></td> -->
